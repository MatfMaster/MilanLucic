@model Dobavljac

<div (window:resize)="onResize($event)">
    @* Sa svim default vrednostima *@
    <a2b-crud-scrolltable-panel></a2b-crud-scrolltable-panel>

    <a2b-panel class="col-md-6">
        <a2b-form-horizontal>
            <a2b-input-field for="Naziv"></a2b-input-field>
            <a2b-input-field for="Adresa"></a2b-input-field>
            <a2b-input-field for="Mesto"></a2b-input-field>
            <a2b-input-field for="Telefon"></a2b-input-field>
            <a2b-input-field for="KontaktOsoba"></a2b-input-field>
            <a2b-input-field for="Email"></a2b-input-field>


            <a2b-save-cancel-form-buttons></a2b-save-cancel-form-buttons>
        </a2b-form-horizontal>
    </a2b-panel>
</div>

<potvrdi-brisanje-modal #potvrdiBrisanjeModal (onSubmit)="potvrdjenoBrisanje()"></potvrdi-brisanje-modal>

